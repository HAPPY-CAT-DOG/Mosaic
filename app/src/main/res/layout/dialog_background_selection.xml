<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/img_beach"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:src="@drawable/beach_background"
        android:scaleType="centerCrop"
        android:contentDescription="해변" />

    <ImageView
        android:id="@+id/img_nature"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:layout_marginStart="8dp"
        android:src="@drawable/nature_background"
        android:scaleType="centerCrop"
        android:contentDescription="자연" />

    <ImageView
        android:id="@+id/img_sky"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:layout_marginStart="8dp"
        android:src="@drawable/sky_background"
        android:scaleType="centerCrop"
        android:contentDescription="하늘" />
</LinearLayout>