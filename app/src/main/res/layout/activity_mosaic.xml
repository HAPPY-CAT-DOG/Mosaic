<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginBottom="24dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="@drawable/rounded_gray_box"
        android:contentDescription="모자이크 이미지" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btn_mosaic"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="모자이크"
            android:background="@drawable/rounded_24"
            android:textColor="#000000"
            android:layout_marginRight="8dp"/>

        <Button
            android:id="@+id/btn_blur"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="블러"
            android:background="@drawable/rounded_24"
            android:textColor="#000000"
            android:layout_marginRight="8dp"/>

        <Button
            android:id="@+id/btn_erase"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="지우개"
            android:background="@drawable/rounded_24"
            android:textColor="#000000"
            android:layout_marginRight="8dp"/>

        <Button
            android:id="@+id/btn_ai_remove"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="AI 제거"
            android:background="@drawable/rounded_24"
            android:textColor="#000000"
            android:layout_marginRight="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_undo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="↺"
            android:textSize="14sp"
            android:backgroundTint="#AAAAAA"
            android:background="@drawable/rounded_gray_box" />

        <SeekBar
            android:id="@+id/seekbar_strength"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:max="100"
            android:progress="30" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:text="저장"
            android:textColor="#000000"
            android:background="@drawable/rounded_24"
            android:layout_marginRight="12dp"/>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:text="취소"
            android:textColor="#000000"
            android:background="@drawable/rounded_24"
            android:layout_marginRight="12dp"/>
    </LinearLayout>

</LinearLayout>